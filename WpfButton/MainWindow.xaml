<Window x:Class="WpfButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200
        ">
    <StackPanel>
        <Button Content="Button" Click="Button_Click"></Button>
        <RepeatButton Content="Repeat Button" Click="RepeatButton_Click"></RepeatButton>
        <ToggleButton Content="Toggle Button" Click="ToggleButton_Click"></ToggleButton>
        <TextBlock x:Name="meLogs" />
    </StackPanel>
</Window>
