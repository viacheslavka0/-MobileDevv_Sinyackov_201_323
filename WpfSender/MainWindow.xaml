<Window x:Class="WpfSender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Margin="5" >
            <Button Content="Button A" Click="Button_Click"/>
            <Button Content="Button B" Click="Button_Click"/>
            <Button Content="Button C" Click="Button_Click"/>
        </StackPanel>

        <StackPanel Margin="5" DockPanel.Dock="Top" ButtonBase.Click="Button_Click">
            <Button Content="Button A"/>
            <Button Content="Button B"/>
            <Button Content="Button C"/>
        </StackPanel>

        <ListBox x:Name="LBlogs"></ListBox>

    </DockPanel>
</Window>
